@model GestiondeCursos.Models.Inscripcion

@{
    ViewData["Title"] = "Detalle de Inscripción";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i> Detalles del Registro
                    </h5>
                </div>
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <span class="badge bg-success fs-6 mb-2">Inscripción Activa</span>
                        <h4 class="fw-bold">@Model.Curso.Titulo</h4>
                    </div>

                    <ul class="list-group list-group-flush rounded">
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span><i class="bi bi-person me-2 text-muted"></i> Estudiante</span>
                            <span class="fw-bold">@Model.Estudiante.Nombre @Model.Estudiante.Apellido</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span><i class="bi bi-envelope me-2 text-muted"></i> Email</span>
                            <span>@Model.Estudiante.Email</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span><i class="bi bi-calendar me-2 text-muted"></i> Fecha Inscripción</span>
                            <span class="fw-bold">@Model.Fecha.ToString("dd MMMM yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span><i class="bi bi-journal-text me-2 text-muted"></i> Créditos</span>
                            <span class="badge bg-secondary rounded-pill">@Model.Curso.Creditos</span>
                        </li>
                    </ul>

                </div>
                <div class="card-footer bg-white d-flex justify-content-end gap-2 py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info text-white">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>