@model IEnumerable<GestiondeCursos.Models.Inscripcion>

@{
    ViewData["Title"] = "Inscripciones";
}

<div class="container-fluid px-4 mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Inscripciones</h1>
            <p class="text-muted small mb-0">Registro académico de estudiantes por curso.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="bi bi-file-earmark-plus me-2"></i> Nueva Inscripción
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-list-check me-2"></i> Matrícula Activa
            </h6>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-clipboard-x text-muted display-4"></i>
                    </div>
                    <h4 class="text-muted">No hay inscripciones registradas</h4>
                    <p class="text-muted small">Asigna un estudiante a un curso para comenzar.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Curso
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Estudiante
                                </th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Fecha Registro
                                </th>
                                <th class="text-end pe-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light text-success rounded p-2 me-3">
                                                <i class="bi bi-book"></i>
                                            </div>
                                            <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Curso.Titulo)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">
                                                @Html.DisplayFor(modelItem => item.Estudiante.Nombre) @Html.DisplayFor(modelItem => item.Estudiante.Apellido)
                                            </span>
                                            <small class="text-muted">@Html.DisplayFor(modelItem => item.Estudiante.Email)</small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            @item.Fecha.ToString("dd/MM/yyyy")
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Dar de baja">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>