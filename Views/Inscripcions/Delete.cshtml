@model GestiondeCursos.Models.Inscripcion

@{
    ViewData["Title"] = "Eliminar Inscripción";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 border-top border-danger border-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-person-x-fill text-danger display-1"></i>
                    </div>
                    <h3 class="card-title text-danger mb-3">¿Dar de baja?</h3>
                    <p class="text-muted mb-4">
                        Estás a punto de eliminar la inscripción de
                        <strong>@Model.Estudiante.Nombre @Model.Estudiante.Apellido</strong>
                        del curso
                        <strong>@Model.Curso.Titulo</strong>.
                    </p>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash me-1"></i> Confirmar Baja
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>