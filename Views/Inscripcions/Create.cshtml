@model GestiondeCursos.Models.Inscripcion

@{
    ViewData["Title"] = "Registrar Inscripción";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-person-check me-2"></i> Nueva Inscripción
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="EstudianteId" class="form-label fw-bold text-muted">Seleccionar Estudiante</label>
                            <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.EstudianteId">
                                <option value="">-- Buscar Estudiante --</option>
                            </select>
                            <span asp-validation-for="EstudianteId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CursoId" class="form-label fw-bold text-muted">Seleccionar Curso</label>
                            <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId">
                                <option value="">-- Buscar Curso --</option>
                            </select>
                            <span asp-validation-for="CursoId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Fecha" class="form-label fw-bold text-muted">Fecha de Inscripción</label>
                            <input asp-for="Fecha" class="form-control" type="date" />
                            <span asp-validation-for="Fecha" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-light text-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-success px-4">Confirmar Inscripción</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}