@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary fw-bold">Dashboard Académico</h1>
            <p class="text-muted">Resumen de inteligencia de negocios del sistema.</p>
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow border-0 bg-primary text-white h-100">
                <div class="card-body">
                    <h1 class="display-3 fw-bold">@ViewBag.TotalEstudiantes</h1>
                    <p class="fs-5">Estudiantes Registrados</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 bg-success text-white h-100">
                <div class="card-body">
                    <h1 class="display-3 fw-bold">@ViewBag.TotalCursos</h1>
                    <p class="fs-5">Cursos Disponibles</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 bg-info text-white h-100">
                <div class="card-body">
                    <h1 class="display-3 fw-bold">@ViewBag.TotalInscripciones</h1>
                    <p class="fs-5">Inscripciones Activas</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">🏆 Cursos Más Populares</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.CursosPopulares != null)
                    {
                        @foreach (dynamic item in ViewBag.CursosPopulares)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-bold">@item.Curso</span>
                                    <span>@item.Cantidad inscritos</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    @{
                                        // Cálculo simple para el ancho de la barra (asumiendo max 20 para visualización)
                                        int ancho = (item.Cantidad * 10);
                                        if (ancho > 100) ancho = 100;
                                    }
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: @ancho%"></div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>