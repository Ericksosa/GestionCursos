@model GestiondeCursos.Models.Estudiante

@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 border-top border-danger border-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger display-1"></i>
                    </div>
                    <h3 class="card-title text-danger mb-3">¿Estás seguro?</h3>
                    <p class="text-muted mb-4">
                        Estás a punto de eliminar al estudiante <strong>@Model.Nombre @Model.Apellido</strong>.
                        Esta acción es irreversible y podría afectar los historiales de cursos.
                    </p>

                    <div class="bg-light p-3 rounded mb-4 text-start">
                        <dl class="row mb-0">
                            <dt class="col-sm-3 text-muted">Email:</dt>
                            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.Email)</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>