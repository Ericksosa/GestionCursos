@model GestiondeCursos.Models.Curso

@{
    ViewData["Title"] = "Eliminar Curso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 border-top border-danger border-3">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-trash3-fill text-danger display-1"></i>
                    </div>
                    <h3 class="card-title text-danger mb-3">¿Eliminar Curso?</h3>
                    <p class="text-muted mb-4">
                        Estás a punto de eliminar el curso <strong>@Model.Titulo</strong>.
                        <br>
                        <small class="text-danger">Esta acción no se puede deshacer.</small>
                    </p>

                    <div class="d-flex justify-content-center gap-4 mb-4">
                        <div class="text-center">
                            <span class="d-block fw-bold">Créditos</span>
                            <span class="badge bg-light text-dark border">@Model.Creditos</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash me-1"></i> Confirmar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>