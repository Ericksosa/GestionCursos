@model GestiondeCursos.Models.Curso

@{
    ViewData["Title"] = "Nuevo Curso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-plus me-2"></i> Crear Curso
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label fw-bold text-muted">Título del Curso</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Ej: Introducción a la Programación" />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Creditos" class="form-label fw-bold text-muted">Créditos Académicos</label>
                            <input asp-for="Creditos" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="Creditos" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold text-muted">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Breve resumen del contenido..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-light text-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-4">Guardar Curso</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}