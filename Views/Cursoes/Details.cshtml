@model GestiondeCursos.Models.Curso

@{
    ViewData["Title"] = "Detalles del Curso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i> Información del Curso
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-book-half display-1 text-info opacity-50"></i>
                        <h3 class="fw-bold text-dark mt-2">@Model.Titulo</h3>
                        <span class="badge bg-secondary fs-6 mt-2">@Model.Creditos Créditos</span>
                    </div>

                    <div class="bg-light p-3 rounded">
                        <h6 class="fw-bold text-muted">Descripción:</h6>
                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Descripcion)</p>
                    </div>

                </div>
                <div class="card-footer bg-white d-flex justify-content-end gap-2 py-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info text-white">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>